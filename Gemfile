source 'https://rubygems.org'

ruby '>= 2.7'

# Core site engine
gem 'jekyll', '~> 4.4.1'

# Markdown GFM support for kramdown v2
gem 'kramdown-parser-gfm'

# Use Chirpy theme as a gem (avoids remote_theme MockGemspec issues)
gem 'jekyll-theme-chirpy', '~> 7.3'

# Common plugins
gem 'jekyll-seo-tag'
gem 'jekyll-sitemap'
gem 'jekyll-feed'
gem 'jemoji'
gem 'jekyll-paginate'
gem 'jekyll-archives'
gem 'jekyll-include-cache'

group :development do
  # Ensure `jekyll serve` works smoothly on Ruby 3.x
  gem 'webrick'
end
